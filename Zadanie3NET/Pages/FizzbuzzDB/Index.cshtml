@page
@model Zadanie3NET.Pages.FizzbuzzDB.IndexModel

@{
    ViewData["Title"] = "Database";
}

<h1 class="display-4">Ostatnie 10 Fizzbuzz'ów</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FizzbuzzList[0].Input)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzbuzzList[0].Output)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzbuzzList[0].Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FizzbuzzList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Input)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Output)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
